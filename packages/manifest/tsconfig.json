{
  "include": ["./**/*.ts", "./**/*.tsx", "package.json"],
  "exclude": ["dist", "./**/__tests__",  "./**/__test__", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "composite": true,
    "target": "es2022",
    "module": "nodenext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": true,
    "rootDir": ".",
    "outDir": "dist/"
  }
}
