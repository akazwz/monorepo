{
  "include": ["./**/*.ts", "package.json"],
  "exclude": ["dist", "./**/__tests__", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2022", "WebWorker", "DOM", "DOM.Iterable"],
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": false,
    "declaration": true,
    "allowJs": true,
    "rootDir": ".",
    "outDir": "dist/"
  }
}